package package1;

public class BankBLC {
   private int deposite;
   private int withdraw;
   private int balance=200000;
   
   public void setDeposite(int deposite) {
	 
	   this.deposite=deposite;
	   
   }
   public void getDeposite() {
	   if(deposite>=100) {
		   balance=deposite+balance;
		   System.out.println("deposited amount is"+deposite);
		   System.out.println("Balance updated to"+balance);
		   }
		   else {
			   System.out.println("Minimum amount to deposite should be more than 100");
		   } 
   }
   public void setWithdraw(int withdraw)
   {
	  
	   this.withdraw=withdraw;
   }
   public void getWithdraw()
   {
	   if(withdraw>=100) 
	   {
		   if(balance>=withdraw) 
		   {
	   System.out.println("withdrawed amount is"+withdraw);
	   balance=balance-withdraw;
	   System.out.println("balance is"+balance);
	       }
		   else
		   {
			   System.out.println("Insufficient funds");
		   }
	   }
	  else 
		 {
		  System.out.println("minimum amount to withdraw should be more than 100");
		 }
   } 
  
   }





/////BankELC code

package package1;
import java.util.Scanner;
public class BankELC {
	public static void main(String args[]) {
		Scanner s=new Scanner(System.in);
		BankBLC b=new BankBLC();
		int i=1;
		while(i<=10) {
		System.out.println("Enter your choice");
		int choice=s.nextInt();
		if(choice==1) {
			System.out.println("Enter the amount to be deposite");
			int amount=s.nextInt();
		    b.setDeposite(amount);
		    b.getDeposite();
		}
		else if(choice==2) {
			System.out.println("Enter the amount to be withdraw");
			int amount=s.nextInt();
		    b.setWithdraw(amount);
	        b.getWithdraw();
		}
		else {
			System.out.println("Invalid choice");
		}
	   i++;
	}

}
}


